echo "[pre] yoossa installer is configuring your system"

zfs list | grep yoossa > /dev/null
dataset_exists="$?"
if [ "$dataset_exists" -eq "1" ]; then
    zfs create \
        -o mountpoint=/yoossa \
        -o atime=off \
        -o compression=zstd \
        zroot/yoossa
else
    datetime="$( date +"%m-%d-%Y_%H-%M" | tr -d "\n" )"
    zfs snapshot -r "zroot/yoossa@pre-yossa-${datetime}"
fi
